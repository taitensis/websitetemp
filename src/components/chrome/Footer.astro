---
import { t, setLocale, DEFAULT_LOCALE, type Locale } from '@/i18n/ui';

const locale = (Astro.currentLocale ?? DEFAULT_LOCALE) as Locale;
setLocale(locale);

const year = new Date().getFullYear();
---

<footer class="bg-background/95 supports-[backdrop-filter]:bg-background/60 border-t backdrop-blur">
  <div class="mx-auto max-w-6xl px-4 py-8">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
      <p class="text-muted-foreground text-sm">
        © {year} Maxime C. — {t('footer.copyright').replace('© {year} Maxime C. — ', '')}
      </p>

      <div class="text-muted-foreground flex flex-wrap gap-1 text-sm">
        <span
          >{
            t('footer.built_with')
              .replace('{astro}', 'Astro')
              .replace('{tailwind}', 'Tailwind CSS')
              .replace('{shadcn}', 'shadcn/ui')
          }</span
        >
      </div>
    </div>
  </div>
</footer>
