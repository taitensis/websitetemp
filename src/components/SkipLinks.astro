---
export interface Props {
  links?: Array<{
    href: string;
    label: string;
  }>;
}

const {
  links = [
    { href: '#main-content', label: 'Skip to main content' },
    { href: '#navigation', label: 'Skip to navigation' },
    { href: '#footer', label: 'Skip to footer' },
  ],
} = Astro.props;
---

<div class="skip-links">
  {
    links.map((link) => (
      <a
        href={link.href}
        class="skip-link focus:bg-primary focus:text-primary-foreground focus:ring-ring sr-only transition-all focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-[9999] focus:rounded-md focus:px-4 focus:py-2 focus:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2"
      >
        {link.label}
      </a>
    ))
  }
</div>

<style>
  .skip-link:focus {
    transform: translateY(0);
  }
</style>
