---
import '../styles/global.css';
import hero from '@/assets/hero.webp';
import Seo from '@/components/seo/Seo.astro';
import Header from '@/components/chrome/Header.astro';
import Footer from '@/components/chrome/Footer.astro';
import Background from '@/components/chrome/Background.astro';
import { t, setLocale, DEFAULT_LOCALE, type Locale } from '@/i18n/ui';

const locale = (Astro.currentLocale ?? DEFAULT_LOCALE) as Locale;
setLocale(locale); // Set the global locale context

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
  bgUrl?: string;
  mainClass?: string;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  title = 'Nourriture Quotidienne',
  description = t('welcome.welcome_message'),
  image,
  noIndex = false,
  bgUrl,
  mainClass = '',
  hideHeader = false,
  hideFooter = false,
} = Astro.props;

const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
---

<!doctype html>
<html lang={locale} class="scroll-smooth">
  <head>
    <Seo
      title={title === 'Nourriture Quotidienne' ? title : `${title} Â· Nourriture Quotidienne`}
      description={description}
      image={image}
      noIndex={noIndex}
      locale={locale}
      canonical={canonical}
    />
    <slot name="head" />
    <script is:inline>
      try {
        const s = localStorage.getItem('theme');
        const prefersDark = matchMedia('(prefers-color-scheme: dark)').matches;
        if (s === 'dark' || (!s && prefersDark)) document.documentElement.classList.add('dark');
      } catch {}
    </script>
  </head>
  <body class="bg-background text-foreground flex min-h-dvh flex-col antialiased">
    {!hideHeader && <Header />}

    {bgUrl && <Background src={hero.src} />}

    <main id="main-content" class={`relative flex-1 px-4 py-3 ${mainClass}`}>
      <div class="relative z-10">
        <slot />
      </div>
    </main>

    {!hideFooter && <Footer />}
  </body>
</html>
